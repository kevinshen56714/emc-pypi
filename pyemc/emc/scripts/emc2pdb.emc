#!/usr/bin/env emc.sh
(* EMC: Script *)

variables	= {
  input		-> $arg0,
  output	-> $arg1,
  traject	-> input,
  compress	-> true,
  unwrap	-> true,
  pbc		-> true,
  vdw		-> false,
  cut		-> false,
  connect	-> false,
  source	-> ".",
  target	-> "."
};

get		= {name -> source+"/"+input, work -> target};

