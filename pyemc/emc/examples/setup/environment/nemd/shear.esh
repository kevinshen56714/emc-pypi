#!/usr/bin/env emc_setup.pl

#
# Zero shear simulation
#

ITEM	OPTIONS

project		pure
replace		true
environment	true
name_analyze	date00
name_build	date00
name_run	date00
queue_build	default
queue_analyze	default
shear		true, true
restart		false
ncores		8
trun		-

ITEM	END

ITEM	LOOPS

stage		pure
trial		c-06	c-07	c-08	c-09	c-10	&
		c-11	c-12	c-13	c-14	c-15
shear		0.00e0
copy		1

ITEM	END

#
# Subsequent shear simulation
#

ITEM	OPTIONS

name_build	-
name_run	date10
name_analyze	date10
restart		true, ../../0.00e0

ITEM	END

ITEM	LOOPS

shear		1.00e-4, 1.00e-5, 1.00e-6

ITEM	END

#
# Project stage pure
#

ITEM	STAGE	pure

# Set script template

ITEM	TEMPLATE

# Command line options

ITEM	OPTIONS

replace		true
field		opls-ua
